---
import Header from './Header.astro';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-100">
	<Header title={title} />
	<body class="d-flex flex-column h-100">
		<!-- Header -->
		<div class="text-center mt-0 pt-2 pb-0 fixed-top layout_header_wrap bg-white">
			<div><a href={`/`}>[ Top ]</a></div>
		</div>		
		<!-- slot -->
		<slot />
		<!-- footer -->
		<footer class="footer mt-auto py-3 bg-light">
			<div class="container">
				<span>visit: 
					<a href="https://github.com/kuc-arc-f/astro2_32cms">
					https://github.com/kuc-arc-f/astro2_32cms
					</a>
				</span>
			</div>
		</footer>		
	</body>
</html>
<style is:global>
.layout_header_wrap { height: 50px; }
</style>
<script src="../lib/Layout.ts"></script>

